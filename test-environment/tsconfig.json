{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "downlevelIteration": true,
    "module": "esNext",
    "target": "es2015",
    "types": ["jest", "node", "./types/custom.d.ts", "./types/global.d.ts"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["app/*"],
    }
  },
  "include": ["dist/*/**.d.ts", "app/*/**.ts"],
  "exclude": ["node_modules"]
}

